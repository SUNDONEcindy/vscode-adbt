{
	"name": "adbt",
	"displayName": "ADBT",
	"publisher": "igordvlpr",
	"description": "ðŸ“œ Provides ADBT (Adblock template) support in Visual Studio Code. ðŸª…",
	"version": "1.0.0",
	"engines": {
		"vscode": "^1.80.0"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
		"onLanguage:adbt",
		"workspaceContains:**/*.adbt",
		"workspaceContains:**/*.adbt.meta"
	],
	"extensionKind": [
		"workspace"
	],
	"files": [
		"dist",
		"meta",
		"assets/adbt.png"
	],
	"main": "./dist/extension.js",
	"icon": "./assets/adbt.png",
	"galleryBanner": {
		"color": "#001140",
		"theme": "dark"
	},
	"keywords": [
		"adbt",
		"adblock",
		"template",
		"engine",
		"adblock-template",
		"compile",
		"syntax-highlight",
		"utility",
		"igordvlpr"
	],
	"contributes": {
		"configurationDefaults": {
			"[adbt]": {
				"files.eol": "\n"
			}
		},
		"languages": [
			{
				"id": "adbt",
				"aliases": [
					"Adblock template",
					"adbt"
				],
				"extensions": [
					".adbt"
				]
			}
		],
		"grammars": [
			{
				"language": "adbt",
				"scopeName": "source.adbt",
				"path": "./syntaxes/adbt.tmLanguage.json"
			}
		],
		"jsonValidation": [
			{
				"fileMatch": [
					"*.adbt.meta"
				],
				"url": "./meta/adbt-meta-schema.json"
			}
		]
	},
	"scripts": {
		"base": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --platform=node --external:vscode --target=node16",
		"vscode:prepublish": "npm run make",
		"make": "npm run -S base -- --minify",
		"dev": "npm run -S base -- --sourcemap --watch",
		"pkg": "vsce package",
		"pub": "vsce publish"
	},
	"devDependencies": {
		"@types/node": "^16.17.1",
		"@types/vscode": "^1.80.0",
		"typescript": "^5.1.6",
		"esbuild": "^0.18.17"
	},
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/igorskyflyer/vscode-adbt/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/igorskyflyer/vscode-adbt.git"
	},
	"homepage": "https://github.com/igorskyflyer/vscode-adbt/blob/main/README.md"
}
