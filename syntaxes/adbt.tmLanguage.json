{
	"name": "Adbt",
	"scopeName": "source.adbt",
	"fileTypes": [
		"adbt"
	],
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#directives"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.exported.adbt",
					"begin": "#",
					"end": "$",
					"captures": {
						"0": {
							"name": "punctuation.definition.comment.adbt"
						}
					}
				},
				{
					"name": "comment.internal.adbt",
					"begin": "@",
					"end": "$",
					"captures": {
						"0": {
							"name": "punctuation.definition.comment.adbt"
						}
					}
				}
			]
		},
		"directives": {
			"patterns": [
				{
					"name": "directive.include.adbt",
					"begin": "include\\s+",
					"end": "('.*')$",
					"captures": {
						"0": {
							"name": "storage.type.function.adbt"
						},
						"1": {
							"name": "string.quoted.single.adbt"
						}
					}
				},
				{
					"name": "directive.header.adbt",
					"begin": "header\\s+",
					"end": "('.*')$",
					"captures": {
						"0": {
							"name": "storage.type.function.adbt"
						},
						"1": {
							"name": "string.quoted.single.adbt"
						}
					}
				},
				{
					"name": "directive.export.adbt",
					"begin": "export\\s+",
					"end": "('.*')$",
					"captures": {
						"0": {
							"name": "storage.type.function.adbt"
						},
						"1": {
							"name": "string.quoted.single.adbt"
						}
					}
				},
				{
					"name": "directive.newline.adbt",
					"match": "^\\s*nl\\s*$",
					"captures": {
						"0": {
							"name": "storage.type.function.adbt"
						}
					}
				}
			]
		}
	}
}
