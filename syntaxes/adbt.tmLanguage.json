{
	"name": "Adbt",
	"scopeName": "source.adbt",
	"fileTypes": [
		"adbt"
	],
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#statements-all"
		}
	],
	"repository": {
		"strings": {
			"patterns": [
				{
					"name": "string.quoted.single.adbt",
					"begin": "'",
					"end": "'",
					"beginCaptures": {
						"0": {
							"name": "punctuation.definition.string.begin.adbt"
						}
					},
					"endCaptures": {
						"0": {
							"name": "punctuation.definition.string.begin.adbt"
						}
					}
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.exported.adbt",
					"begin": "#",
					"end": "$",
					"captures": {
						"1": {
							"name": "punctuation.definition.comment.adbt"
						}
					}
				},
				{
					"name": "comment.internal.adbt",
					"begin": "@",
					"end": "$",
					"captures": {
						"1": {
							"name": "punctuation.definition.comment.adbt"
						}
					}
				}
			]
		},
		"statements": {
			"patterns": [
				{
					"name": "keyword.statement.adbt",
					"match": "\\b(header|export|nl|tag|import|include)\\b",
					"captures": {
						"1": {
							"name": "meta.function.adbt"
						}
					}
				}
			]
		},
		"statements-actions-simple": {
			"patterns": [
				{
					"name": "keyword.statement.action.simple.adbt",
					"match": "\\b(trim|dedupe)\\b",
					"captures": {
						"1": {
							"name": "variable.other.property.adbt"
						}
					}
				}
			]
		},
		"statements-actions-parameterized": {
			"patterns": [
				{
					"name": "keyword.statement.action.parameterized.strip.adbt",
					"match": "(strip\\s*(=)?\\s*(?:(modifiers|comments)\\b)?)",
					"captures": {
						"1": {
							"name": "variable.other.property.adbt"
						},
						"2": {
							"name": "keyword.operator.assignment.adbt"
						},
						"3": {
							"name": "variable.other.constant.property.adbt"
						}
					}
				},
				{
					"name": "keyword.statement.action.parameterized.sort.adbt",
					"match": "(sort\\s*(=)?\\s*(?:(asc|desc)\\b)?)",
					"captures": {
						"1": {
							"name": "variable.other.property.adbt"
						},
						"2": {
							"name": "keyword.operator.assignment.adbt"
						},
						"3": {
							"name": "variable.other.constant.property.adbt"
						}
					}
				},
				{
					"name": "keyword.statement.action.parameterized.append.adbt",
					"match": "(append\\s*(=)?\\s*('.*?')?)",
					"captures": {
						"1": {
							"name": "variable.other.property.adbt"
						},
						"2": {
							"name": "keyword.operator.assignment.adbt"
						},
						"3": {
							"name": "string.quoted.single.adbt"
						}
					}
				}
			]
		},
		"statements-all": {
			"patterns": [
				{
					"include": "#strings"
				},
				{
					"include": "#statements"
				},
				{
					"include": "#statements-actions-simple"
				},
				{
					"include": "#statements-actions-parameterized"
				}
			]
		}
	}
}
