{
	"name": "Adbt",
	"scopeName": "source.adbt",
	"fileTypes": [
		"adbt"
	],
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"strings": {
			"patterns": [
				{
					"name": "string.quoted.single.adbt",
					"begin": "'",
					"end": "'",
					"patterns": [
						{
							"match": "\\\\(?:\\\\|')",
							"name": "constant.character.escape.adbt"
						},
						{
							"match": "[^\\\\']+",
							"name": "string.quoted.single.adbt"
						}
					]
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.exported.adbt",
					"begin": "#",
					"end": "$",
					"captures": {
						"0": {
							"name": "punctuation.definition.comment.adbt"
						}
					}
				},
				{
					"name": "comment.internal.adbt",
					"begin": "@",
					"end": "$",
					"captures": {
						"0": {
							"name": "punctuation.definition.comment.adbt"
						}
					}
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.statement.adbt",
					"match": "\\b(header|include|export|nl|import|tag)\\b",
					"captures": {
						"0": {
							"name": "storage.type.function.adbt"
						}
					}
				}
			]
		}
	}
}
